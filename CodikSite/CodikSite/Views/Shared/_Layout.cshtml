<!DOCTYPE html>
<html>
<head>
    <link href="/favicon.ico" rel="shortcut icon" runat="server" type="image/x-icon" />
    <link href="/favicon.ico" rel="icon" runat="server" type="image/ico" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Codik", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown text-danger">
                        <a id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="icon-next" style="color:lawngreen">Закодировать</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Хаффман", "HuffmanDecode", "Home")</li>
                            <li>@Html.ActionLink("Арифметическое", "ArithmeticDecode", "Home")</li>
                            <li>@Html.ActionLink("LZ78", "LZ78Decode", "Home")</li>
                            <li>@Html.ActionLink("BW", "BWDecode", "Home")</li>
                            <li>@Html.ActionLink("RLE", "RLEDecode", "Home")</li>
                        </ul>
                    </li>
                    @*<li>@Html.ActionLink("Закодировать", "Encode", "Home", new { @style = "color:#77c700;" })</li>*@
                    <li class="dropdown text-danger">
                        <a id="drop2" href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="icon-bar" style="color:darkorange">Декодировать</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Хаффман", "HuffmanDecode", "Home")</li>
                            <li>@Html.ActionLink("Арифметическое", "ArithmeticDecode", "Home")</li>
                            <li>@Html.ActionLink("LZ78", "LZ78Decode", "Home")</li>
                            <li>@Html.ActionLink("BW", "BWDecode", "Home")</li>
                            <li>@Html.ActionLink("RLE", "RLEDecode", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("О программе", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – PSKTeam</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
